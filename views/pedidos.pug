extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 ¿Cuántas cajas quiere?
        form(method='POST' action='/pedidos')
          div.form-group
            label(for='number') Numero de cajas:  
            input.form-control(type='text' id='number' placeholder='Número de cajas' name='number')
          button.btn.btn-primary(type='submit') Pedir